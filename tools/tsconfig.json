{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "types": ["node"],
    "module": "commonjs",
    "target": "es6"
  },
  "include": ["**/*.ts", "src/index.js"],
  "exclude": ["node_modules", "lib"]
}
